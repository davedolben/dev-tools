#!/usr/bin/env bash

#
# Prints a pretty graph of the git commit history starting at HEAD (or the branches/commits given as args).
#

#git log --graph --abbrev-commit --decorate --format=oneline "$@"
format_extras=""

while [ "$#" -ge "1" ]; do
  case "$1" in
    "--dates")
      format_extras="${format_extras} %C(auto,blue)%cd%Creset"
      shift
      ;;
    *)
      break
      ;;
  esac
done

git log --graph --format="%C(auto,yellow)%h%Creset %C(auto,green)%an%Creset${format_extras} %s %C(auto)%d%Creset" "$@"

