#!/usr/bin/env bash

test_url=google.com

COLOR_GREEN=$'\e[0;32m'
COLOR_RED=$'\e[0;31m'
COLOR_CLEAR=$'\e[m'

while true; do
  ping -c 1 -W 5 "${test_url}" > /dev/null 2>&1
  result="$?"
  echo ""
  if [ "$result" -eq "0" ]; then
    printf "${COLOR_GREEN}"
    echo "+++++++++++++++++++++++++"
    echo "+++++++++++++++++++++++++"
    echo "+++++   Connected   +++++"
    echo "+++++++++++++++++++++++++"
    echo "+++++++++++++++++++++++++"
    printf "${COLOR_CLEAR}"
  else
    printf "${COLOR_RED}"
    echo "-------------------------"
    echo "-------------------------"
    echo "----- Not connected -----"
    echo "-------------------------"
    echo "-------------------------"
    printf "${COLOR_CLEAR}"
  fi
  sleep 5
done

